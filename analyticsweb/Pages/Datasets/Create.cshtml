@page
@model analyticsweb.Pages.Datasets.CreateModel
@{
    ViewData["Title"] = "Create Dataset";
}

<h1>Create Dataset</h1>

<p>
    Enter a dataset name and (optionally) a description. This will be saved to the database.
</p>

<form method="post">
    <div class="mb-3">
        <label asp-for="Dataset.Name" class="form-label"></label>
        <input asp-for="Dataset.Name" class="form-control" />
        <span asp-validation-for="Dataset.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Dataset.Description" class="form-label"></label>
        <textarea asp-for="Dataset.Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Dataset.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Dataset</button>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
