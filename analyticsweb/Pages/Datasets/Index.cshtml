@page
@model analyticsweb.Pages.Datasets.IndexModel
@{
    ViewData["Title"] = "Datasets";
}

<h1>Datasets</h1>

<p>
    Use the search box to find datasets by <strong>Name</strong> or <strong>Description</strong>.
    <br />
    Wildcards are allowed using <strong>*</strong>:
</p>
<ul>
    <li><code>roof*</code> = starts with “roof”</li>
    <li><code>*clean*</code> = contains “clean” anywhere</li>
</ul>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text"
               name="q"
               value="@Model.Q"
               class="form-control"
               placeholder="Search datasets (use * for wildcard)" />

        <button type="submit" class="btn btn-primary">Search</button>

        <a asp-page="./Index" class="btn btn-secondary">Clear</a>

        <a asp-page="./Create" class="btn btn-success">Create New</a>
    </div>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Q))
{
    <p>
        Showing results for: <strong>@Model.Q</strong>
    </p>
}

@if (Model.Datasets.Count == 0)
{
    <div class="alert alert-warning">
        No datasets found.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.Datasets)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@d.Description</td>
                    <td>@d.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary"
                           href="/Datasets/Edit?id=@d.Id&q=@Model.Q">
                            Edit
                        </a>

                        <a class="btn btn-sm btn-outline-danger"
                           href="/Datasets/Delete?id=@d.Id&q=@Model.Q">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
