@page
@model analyticsweb.Pages.Datasets.DeleteModel
@{
    ViewData["Title"] = "Delete Dataset";
}

<h1>Delete Dataset</h1>

<div class="alert alert-danger">
    <strong>Warning:</strong> This will permanently delete the dataset.
</div>

<p>
    Are you sure you want to delete this dataset?
</p>

<ul>
    <li><strong>Name:</strong> @Model.Dataset.Name</li>
    <li><strong>Description:</strong> @Model.Dataset.Description</li>
</ul>

<form method="post">
    <!-- Preserve search term so user returns to same filtered list -->
    <input type="hidden" asp-for="Q" />

    <button type="submit" class="btn btn-danger" asp-route-id="@Model.Dataset.Id">
        Yes, Delete
    </button>

    <a asp-page="./Index" asp-route-q="@Model.Q" class="btn btn-secondary">
        Cancel
    </a>
</form>